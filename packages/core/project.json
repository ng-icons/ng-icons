{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/core/src",
  "prefix": "ng",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/packages/core"],
      "options": {
        "commands": ["nx run core:build-lib", "nx run core:build-schematics"],
        "parallel": false
      },
      "configurations": {
        "production": {},
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "build-lib": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/packages/core"],
      "options": {
        "project": "packages/core/ng-package.json",
        "tsConfig": "packages/core/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/core/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "build-schematics": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/packages/core/schematics"],
      "options": {
        "commands": [
          "npx tsc -p packages/core/schematics/tsconfig.json",
          "cp packages/core/schematics/**/*.json dist/packages/core/schematics/"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "nx-release-publish": {
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "{workspaceRoot}/dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/core"
      }
    }
  }
}
