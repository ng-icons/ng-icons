{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/packages/core/schematics",
    "types": ["node", "vitest"],
    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "preserveWatchOutput": true
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.spec.ts"]
}
